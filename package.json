{
  "name": "madhardware",
  "version": "0.1.0",
  "private": false,
  "repository": "https://github.com/sanchis/madhardware",
  "scripts": {
    "dev": "next dev",
    "debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "start": "next start"
  },
  "dependencies": {
    "@chakra-ui/react": "1.3.4",
    "@emotion/react": "11.1.5",
    "@emotion/styled": "11.1.5",
    "axios": "0.21.1",
    "cheerio": "1.0.0-rc.5",
    "framer-motion": "3.10.3",
    "next": "10.0.7",
    "next-connect": "0.10.0",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.10",
    "@testing-library/react": "11.2.5",
    "babel-jest": "26.6.3",
    "cross-env": "7.0.3",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "standard": "16.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,html}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json",
    "env": {
      "jest": true
    }
  },
  "standard": {
    "env": [
      "jest"
    ]
