{
  "name": "madhardware",
  "version": "0.1.0",
  "private": false,
  "repository": "https://github.com/sanchis/madhardware",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "lint": "ts-standard -p ./tsconfig.json",
    "lint:fix": "ts-standard -p ./tsconfig.json --fix",
    "start": "next start"
  },
  "dependencies": {
    "next": "10.0.7",
    "next-connect": "^0.10.0",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "ts-standard": "^10.0.0",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,html}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "ts-standard": {
    "project": "./tsconfig.json",
    "ignore": [
      "next-env.d.ts"
    ]
  }
}
